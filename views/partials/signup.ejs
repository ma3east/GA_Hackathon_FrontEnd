<h1 class="search-header animated"><img class="img-responsive" style='margin:auto;' src="/images/eventmatch.png" alt=""></h1>
<hr>
<div class="container main-content" >

<form ng-submit="users.signup()"
novalidate="novalidate"
ng-hide="submitted" >
<div class="form-group" >
  <label for="name" class="control-label">Name</label >
    <input type="text"
    class="form-control"
    name="name"
    ng-model="users.user.name"
    id="name"
    required="required" >
  </div >
  <div class="form-group">
    <label for="img\" class="control-label">Profile Image Url:</label >
      <input type="text"
      class="form-control"
      ng-model="users.user.img"
      id="user-img" >
    </div >
  <div class="form-group">
    <label for="email" class="control-label">Email</label >
      <input type="email"
      class="form-control"
      ng-model="users.user.email"
      id="email"
      required="required" >
    </div >
    
    <div class="form-group" >
      <label for="password" class="control-label">Password</label >
        <input type="password"
        class="form-control"
        name="password"
        ng-model="users.user.password"
        id="password"
        required="required"
        ng-minlength="5">
      </div >

      <div class="form-group">

        <div class="alert alert-danger text-center" ng-show="has_error">
          <h3>There was a problem registering, please try again later!</h3>
        </div>

        <button class="btn btn-primary"
        ladda="submitting"
        data-style="expand-right"
        type="submit">
        <span ng-show="submitting">Registering</span>
        <span ng-show="!submitting">Register</span>
      </button>

        <button class="btn btn-primary"
        <span ng-show="submitting"><a ui-sref="landing">Signup</a></span>
      </button>
      <br/>
      <a ui-sref="login" class="auth-links">Have an Account? Login Here</a>
    </div>
     </form >
</div>
    

  <div class="alert alert-info text-center" ng-show="submitted">
    <h3>Thanks for Registering! Please login</h3>
  </div>

</div >




