
<div class="row">
<div class="col-md-6">
<form ng-submit="users.signup()"
novalidate="novalidate"
ng-hide="submitted" >
<div class="form-group" >
  <label for="name" class="control-label">Name</label >
    <input type="text"
    class="form-control"
    name="name"
    ng-model="users.user.name"
    id="name"
    required="required" >
  </div >

  <div class="form-group">
    <label for="email" class="control-label">Email</label >
      <input type="email"
      class="form-control"
      ng-model="users.user.email"
      id="email"
      required="required" >
    </div >
    
    <div class="form-group" >
      <label for="password" class="control-label">Password</label >
        <input type="password"
        class="form-control"
        name="password"
        ng-model="users.user.password"
        id="password"
        required="required"
        ng-minlength="5">
      </div >

      <div class="form-group">

        <div class="alert alert-danger text-center" ng-show="has_error">
          <h3>There was a problem registering, please try again later!</h3>
        </div>

        <button class="btn btn-primary"
        ladda="submitting"
        data-style="expand-right"
        type="submit">
        <span ng-show="submitting">Registering</span>
        <span ng-show="!submitting">Register</span>
      </button>
    </div>
     </form >
     </div>
     </div>

  <div class="alert alert-info text-center" ng-show="submitted">
    <h3>Thanks for Registering! Please login</h3>
  </div>

</div >