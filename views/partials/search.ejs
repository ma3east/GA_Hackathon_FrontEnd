<h1>Search for Events</h1>
<form ng-submit="events.search()">
  <div class="form-group">
  <input type="text" class="form-control" placeholder="Search Events" ng-model="events.query.query">
  </div>
  <div class="form-group">
    <button type="sumbit">Search</button>
  </div>

</form>

<div class="spinner">
  <div class="double-bounce1"></div>
  <div class="double-bounce2"></div>
</div>
<div class="row">
  <div class="row" ng-repeat="event in events.all" >
    <div class='col-sm-3'><img class="img-responsive" ng-src="{{event.img_url}}" alt="event"></div>
    <div class='col-sm-5'>
    <h3>{{event.name}}</h3>
    <p>
      {{ event.description | limitTo: 200 }}...
      <a ui-sref="eventShow">More Info</a>
    </p>
    </div>
    <div class='col-sm-4'><p class="date-conversion">{{ event.date | date:'EEEE, d MMMM   HH:mm' : '+0000'}}</p>
    <p><a href="{{ event.url}}}" target="_blank">More Information/Get Tickets</a></p>
    </div>
  </div>
</div>